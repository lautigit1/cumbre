# Base de Datos
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/cumbre_db?schema=public"

# JWT Configuration
JWT_SECRET="tu-secreto-super-seguro-cambialo-en-produccion"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_SECRET="tu-secreto-refresh-super-seguro-cambialo-en-produccion"
JWT_REFRESH_EXPIRATION="7d"

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_PREFIX=api/v1
API_RATE_LIMIT=100

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=documentacion

# Security
BCRYPT_ROUNDS=12
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# Application
APP_NAME="CUMBRE - Plataforma de Soberanía Digital"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Sistema de gestión de talento y activos digitales de Mendoza"
